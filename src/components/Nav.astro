---
import logo from '../images/logo.svg';
import { Icon } from 'astro-icon'
---

<nav>
	<a class="link" href="/">
		<Icon name='logo' class="monogram" />
	</a>
	<a class="link" href="/about/"> About</a>
	<a class="link" href="/projects/"> Portfolio</a>
	<div class="socials">
		<a class="social" href="https://youtube.com/dwmyke">
			<Icon name='entypo-social:youtube-with-circle' class="socialIcon"  />
		</a>
			
		<a class="social" href="https://www.imdb.com/name/nm1761143/">
			<Icon name='simple-icons:imdb' class="socialIcon"  />
		</a>
		<a class="social" href="https://www.linkedin.com/in/dwmyke/">
			<Icon name='entypo-social:linkedin' class="socialIcon"  />
		</a>
	</div>
</nav>

<style>
	nav {
		display: flex;
		gap: 1rem;
		align-items: center;
		padding: 1rem;
	}

	.link {
		color: var(--t-subdue);
		display: block;
		text-decoration: none;
		font-size: var(--f-d1);
		text-transform: uppercase;
		padding-top: 0.75em;
		padding-bottom: 0.75em;
	}

	.link:hover,
	.link:focus {
		color: var(--t-active);
	}

	.monogram {
		display: flex;
		align-items: center;
		justify-content: center;
		width: 4em;
		height: 4em;
		margin-left: 0.5rem;
		margin-right: 0.5rem;
		color: var(--c-black);
		font-weight: 900;
		letter-spacing: -0.125rem;
		border: 1px solid currentColor;
		border-radius: 50%;
	}

	.socials {
		display: flex;
		gap: 0.75em;
		margin-left: auto;
		margin-right: 0.5rem;
	}

	.social {
		display: block;
	}

	.socialIcon {
		display: block;
		width: 2rem;
		height: 2rem;
		color: var(--t-subdue);
		transition: color linear 150ms;
	}

	.socialIcon:hover {
		color: var(--t-active);
	}
</style>
